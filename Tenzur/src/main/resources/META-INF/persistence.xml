<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
    <description>Default Persistence Unit via Hibernate</description>
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>de.hhbk.tenzur.entities.Test</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.archive.autodetection" value="class, hbm"/>
      <property name="hibernate.connection.url" value="jdbc:postgres://db.clover.lgbt:5433/tenzur;DB_CLOSE_DELAY=-1"/>
      <property name="hibernate.connection.username" value="postgres"/>
      <property name="hibernate.connection.pool_size" value="5"/>
      <property name="hibernate.max_fetch_depth" value="5"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
      <property name="hibernate.cache.region_prefix" value="tenzur"/>
      <property name="hibernate.cache.region.factory_class" value="org.hibernate.testing.cache.CachingRegionFactory"/>
      <property name="hibernate.jdbc.batch_versioned_data" value="true"/>
      <property name="jakarta.persistence.validation.mode" value="NONE"/>
      <property name="hibernate.service.allow_crawling" value="false"/>
      <property name="hibernate.session.events.log" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
